    var Chinese = {
        nation: '中国'

    }
    var Doctor = {
        career: '医生'
    }

    function extendCopy(p) {
        var c = {};
        for (var i in p) {
            c[i] = p[i];
        }
        c.uber = p;
        return c;
    }

    var Doctor = extendCopy(Chinese);
    Doctor.career = '医生';
    console.log(Doctor); // 中国
    Chinese.birthPlaces = ['北京', '上海', '香港'];
    var Doctor = extendCopy(Chinese);
    Doctor.birthPlaces.push('厦门');

